<html>
  <head>
    <title><%= @title %></title>
  </head>
  <body>
    <div>
      <h1><%= @title %></h1>
      <p><a href="/todos/new">Create a new todo item</a></p>
      <ul>
        <% @todos.each do |todo| %>
          <li>
            <a href="/todos/<%= todo[:id] %>">
              <%= "#{todo[:id]} - #{todo[:name]}" %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
 </body>
</html>